<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Twitch Hangouts">
		<Require feature="rpc" />
		<Require feature="views" />
		<Require feature="locked-domain" />
	</ModulePrefs>
	<Content type="html"><![CDATA[     
<html>
<body style="background-color:#181818;">

<script src="https://plus.google.com/hangouts/_/api/v1/hangout.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="https://player.twitch.tv/js/embed/v1.js"></script>
<script src="https://rawgit.com/goldbattle/TwitchHangout/master/assets/js/main.js"></script>

<table style="height:100%;width:100%;">
  <col width="80%">
  <col width="20%">
  <tr style="position:relative;">
    <!-- Video -->
    <div id="live_player">
    </div>
    <!--Stream Input-->
    <div style="position:absolute;bottom:1;right:120px;z-value:99999;">
      <input type="text" id="stream_input" value=""/>
      <button type="button" onclick="change_stream();">Change Stream</button>
      <button type="button" onclick="stream_chat();">Open Chat</button>
    </div>
  </tr>
</table>

</body>
</html>
]]>
</Content>
</Module>

