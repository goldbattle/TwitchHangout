<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Twitch Hangouts">
		<Require feature="rpc" />
		<Require feature="views" />
		<Require feature="locked-domain" />
	</ModulePrefs>
	<Content type="html"><![CDATA[     
<html>
<body style="background-color:#181818;">

<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//190247365838.appspot.com/assets/js/main.js"></script>

<table style="height:100%;width:100%;">
  <col width="80%">
  <col width="20%">
  <tr style="position:relative;">
    <div>
      <!-- Video -->
      <object type="application/x-shockwave-flash" height="100%" width="100%" id="live_embed_player_flash" data="" bgcolor="#000000" >
        <param name="allowFullScreen" value="true" />
        <param name="allowScriptAccess" value="always" />
        <param name="allowNetworking" value="all" />
        <param name="movie" value="https://twitch.tv/widgets/live_embed_player.swf" />
        <param name="flashvars" id="stream_url" value="" />
      </object>
    </div>
    <div style="position:absolute;bottom:1;right:120px;">
      <!--Stream Input-->
      <input type="text" id="stream_input" />
      <button type="button" onclick="change_stream();">Change Stream</button>
      <button type="button" onclick="stream_chat();">Open Chat</button>
    </div>
  </tr>
</table>

</body>
</html>
]]>
</Content>
</Module>

